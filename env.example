# --- App ---
APP_NAME=market-turnover
TZ=Asia/Shanghai
ENABLE_SCHEDULED_JOBS=false
BASE_PATH=/market-turnover
BASIC_AUTH_USER=
BASIC_AUTH_PASS=
AUTH_SECRET_KEY=change-me-in-prod
AUTH_SESSION_MAX_AGE_SECONDS=604800

# --- Database ---
# Docker compose 默认: web 容器通过服务名 db 连接数据库
# 本地直连数据库时可改为 127.0.0.1
POSTGRES_DB=market_turnover
POSTGRES_USER=market_turnover
POSTGRES_PASSWORD=market_turnover
POSTGRES_HOST=db
POSTGRES_PORT=5432
# 留空时由应用按 POSTGRES_* 自动拼接 DATABASE_URL
DATABASE_URL=

# --- Turnover settings ---
CUTOFF_TIME_AM=12:00:00
RECENT_TRADING_DAYS=30
SOURCE_PRIORITY=HKEX,EASTMONEY,TENCENT,AASTOCKS,TUSHARE

# --- Tencent ---
TENCENT_API_KEY=
TENCENT_API_BASE=

# --- Tushare Pro ---
TUSHARE_PRO_TOKEN=
TUSHARE_PRO_BASE=https://api.tushare.pro
TUSHARE_TIMEOUT_SECONDS=15
TUSHARE_INDEX_CODES=HSI=HSI.HI,SSE=000001.SH,SZSE=399001.SZ

# --- AASTOCKS ---
AASTOCKS_TIMEOUT_SECONDS=10

# --- HKEX ---
HKEX_TIMEOUT_SECONDS=20

# Remote server
REMOTE=REMOTE_USER@REMOTE_HOST
